<%- model_class = Problem -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.titleize %>
    <%= @problem.id %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @problem.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @problem.content %></dd>
</dl>


<%= form_for [@problem, @submission], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :language, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :language, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :code, :class => 'text_area' %>
    </div>
  </div>
  <div class="controls">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
  </div>
<% end %>






<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              problems_path, :class => 'btn'  %>

  <%= link_to t('.Status', :default => t("helpers.links.Status")),
              status_path(:pid => @problem.id), :class => 'btn' %>
    <%= link_to t('.Discuss', :default => t("helpers.links.Discuss")),
              problem_discusses_path(@problem.id), :class => 'btn' %>
      
      <% if current_user %>
        <% if current_user.admin? %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_problem_path(@problem), :class => 'btn btn-danger' %>

            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              problem_path(@problem),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
        <% end %>
      <% end %>

</div>
